# DropZone Backend Konfigürasyon Dosyası
# Bu dosyayı .env olarak kopyalayın ve değerleri düzenleyin

# Uygulama Ayarları
APP_NAME=DropZone
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Sunucu Ayarları
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Veritabanı Ayarları
DATABASE_URL=sqlite:///./dropzone.db
# Production için PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/dropzone

# Dosya Yükleme Ayarları
UPLOAD_DIR=static/uploads
MAX_FILE_SIZE=10485760  # 10MB (bytes)
ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.gif,.doc,.docx

# CORS Ayarları (Frontend URL'leri)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Güvenlik Ayarları (İleride JWT için)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WebSocket Ayarları
WS_MESSAGE_QUEUE_SIZE=100
WS_MAX_CONNECTIONS_PER_ROOM=50

# Loglama Ayarları
LOG_LEVEL=INFO
LOG_FILE=logs/dropzone.log
